<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">

      <h2>Create Your Account</h2><br><br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <div class="panel-body">
          <%= f.label :first_name  %>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control', required: true %>
      </div>

      <div class="panel-body">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control",autofocus: true, required: true %>
      </div>

        <div class="panel-body">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
        </div>

        <div class="panel-body">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
        </div>


        <div class="panel-body">
            <%= f.label :password_confirmation, class: "control-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
        </div>


        <div class="panel-body">
            <%= f.submit "Sign up", class: "btn-lg btn-info btn-block" %>
        </div>
      <% end %>

        </div>
      <div class="panel-footer"><%= render "devise/shared/links" %></div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
