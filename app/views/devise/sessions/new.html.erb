<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">

            <h2>Log In</h2><br><br>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

            <div class="panel-body">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, required: true, class: 'form-control'  %>
            </div>

            <div class="panel-body">
              <%= f.label :password  %>
              <%= f.password_field :password, autocomplete: "off", required: true, class: 'form-control'  %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="panel-body">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="panel-body">
              <%= f.submit "Log in", class: "btn-lg btn-info btn-block" %>
            </div>
          <% end %>

        </div>
      <div class="panel-footer"><%= render "devise/shared/links" %></div>

          </div>
        </div>
      </div>
    </div>
  </div>
