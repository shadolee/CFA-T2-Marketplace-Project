<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="log-in panel">
          <div class="panel-heading">

<p id="notice"><%= notice %></p>

<h1>Your Bookings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Cost ($USD)</th>
      <th>Product</th>
      <th>User</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.product.title %></td>
        <td><%= number_to_currency(booking.product.price) %></td>
        <td><%= booking.product.title %></td>
        <td><%= booking.user.email %></td>
        <td><%= booking.number %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Make A New Booking', new_booking_path, class: 'btn btn-primary'  %><br>
<br>
<%= link_to 'Click here to make payment', buyer_dashboard_path, class: 'btn btn-success' %>

