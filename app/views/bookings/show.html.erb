<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">

<h2>You Have Booked:</h2>

<p id="notice"><%= notice %></p>

<p>
  <strong>Product:</strong>
  <%= @booking.product.title %>
</p>

<p>
  <strong>You are logged in as:</strong>
  <%= @booking.user.email %>
</p>

<p>
  <strong>How many would you like to order:</strong>
  <%= @booking.number %>
</p>

<p>
  <strong>Price per unit:</strong>
  <%= number_to_currency(@booking.product.price) %>
</p>

<%= link_to 'Click here to make payment', buyer_dashboard_path, class: 'btn btn-success' %>

<br><br>



<%= link_to 'Edit', edit_booking_path(@booking) %> |
<%= link_to 'Back', bookings_path %>

            </div>
          </div>
        </div>
      </div>
    </div>
</div>
