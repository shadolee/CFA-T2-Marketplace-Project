<p id="notice"><%= notice %></p>

<%= link_to 'Book Now', new_booking_path(product_id: @product.id), class: 'btn btn-primary' %>


<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user.email  %>
</p>

<% @product.images.each do |image| %>
  <img src="<%= image.url %>">
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
