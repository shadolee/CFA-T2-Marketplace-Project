<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">

            <h2>List your USA Citizenship for Sale</H2><br><br>

<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel-body">
    <%= f.label :price %>
    <%= f.number_field :price, autofocus: true, class: 'form-control', required: true %>
  </div><br><br>

  <div class="panel-body">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: 'form-control', required: true %>
  </div><br><br>

  <div class="panel-body">
    <%= f.label :description %>
    <%= f.text_area :description, autofocus: true, class: 'form-control', required: true %>
  </div><br><br>

  <div class="field">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true %>
  </div>


  <div class="panel-body">
    <%= f.submit "List my citizenship for sale", class: "btn-lg btn-info btn-block" %>
  </div>
<% end %>
<br><br><br>

              </div>
          </div>
        </div>
      </div>
    </div>
</div>
